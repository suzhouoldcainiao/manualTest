<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true">

  <!--[變數] 文字樣板 -->
  <variable name="Layout" value="${longdate} ${message}"/>

  <!--[變數] 檔案位置 -->
  <variable name="LogTxtLocation" value="${basedir}/Log/Log.txt"/>

  <!--[設定] 寫入目標-->
  <targets async="true">
    <target name="Common" xsi:type="File"
          layout="${Layout}"
          fileName="${LogTxtLocation}"
          archiveFileName="${basedir}/Log/AppLog{#}.txt"
          archiveAboveSize="409600"
          archiveNumbering="Rolling"
          maxArchiveFiles="20"
          keepFileOpen="true"
          encoding="UTF-8" /> 
  </targets>

  <!--[設定] 紀錄規則-->
  <rules>
    <logger name="ProjectName" levels="Trace,Debug,Info,Warn,Error,Fatal" writeTo="Common" />
   
  </rules>
</nlog>